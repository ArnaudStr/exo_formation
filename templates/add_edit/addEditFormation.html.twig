{% extends 'base.html.twig' %}

{% block body %}
   {{ form_start(form) }}


    {{form_row(form.nom) }} 
    {{form_row(form.nbPlaces) }}
    {{form_row(form.dateDebut) }}
    {{form_row(form.dateFin) }}

    <ul id="modules" data-prototype= "{{ form_row(form.modules.vars.prototype)|e('html_attr') }}">

        {% for module in form.modules %}
             <li>
                {{ form_row(module) }}
            </li>
                     

        {% endfor %} 
    </ul>

    {% if editMode %}
        <ul id="stagiaires" data-prototype= "{{ form_row(form.stagiaires.vars.prototype)|e('html_attr') }}">

            {% for stagiaire in form.stagiaires %}
                <li>
                    {{ form_row(stagiaire) }}
                </li>
            {% endfor %}

        </ul>
    {% endif %}
 
    {{form_row(form.submit) }} 
{{ form_end(form) }} 

{% endblock %}

{% block javascripts %}
    {{ parent()}}

    {% if editMode %}
        <script src="/js/editFormationHandler.js"></script>
    {% else %}
        <script src="/js/addFormationHandler.js"></script>
    {% endif %}
    
{% endblock %}