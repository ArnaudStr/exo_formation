{% extends 'base.html.twig' %}

{% block body %}

	<table class="table table-striped table-warning">
		<thead>
			<tr>
				<th scope="col">Cat√©gorie et modules</th>
				<th scope="col">Formateurs</th>
			</tr>
		</thead>

		<tbody>
			{% if formation.modules %}
				{% for module in formation.modules %}
					{% if categorieM is not defined or categorieM != module.categorie %}	
						<tr>
							<td style="text-align: center"><strong>{{ module.categorie }}<strong></td> 
							{% for formateur in module.categorie.formateurs %}
								<td >{{ formateur }}</td> 
							{% endfor %}
						</tr>		
					{% endif %}				
						<tr>
							<td>{{ module }}</td>
							<td></td>
						</tr>
					{% set categorieM = module.categorie %}
				{% endfor %}
			{% endif %}
		</tbody>
	</table>

{% endblock %}
