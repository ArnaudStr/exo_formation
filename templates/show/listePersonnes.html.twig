{% extends 'base.html.twig' %}

{% block body %}

    {% if stagiaires is defined %}

        {% set personnes = stagiaires %}        
    
    {% else %}
    
        {% set personnes = formateurs %}
    
    {% endif %}

    <table class="table table-striped table-warning">
        <thead>
            <tr>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Sexe</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">Ville</th>
                <th scope="col">Courriel</th>
                <th scope="col">Téléphone</th>
                <th scope="col"></th>
                <th scope="col"></th>
    
            </tr>
        </thead>
        
        <tbody>
            {% for personne in personnes %}
            
            <tr>
                
                {% if stagiaires is defined %}


                    <td><a href="{{ path('showInfoStagiaire',{'id':personne.id}) }}" >{{ personne.prenom }}</a></td>
                    <td><a href="{{ path('showInfoStagiaire',{'id':personne.id}) }}" >{{ personne.nom }}</a></td>
                    <td>{{ personne.sexe }}</td>
                    <td>{{ personne.dateNaissance | date("d/m/Y") }}</td>
                    <td>{{ personne.ville }}</td>
                    <td>{{ personne.email }}</td>
                    <td>{{ personne.telephone }}</td>
                    <td><a href="{{ path('editStagiaire',{'id':personne.id}) }}"><i class="fas fa-edit"></i></a></td>
                    <td><a href="{{ path('deleteStagiaire',{'id':personne.id}) }}"><i class="fas fa-trash-alt"></i></a></td>

                    

                {% else %}

                    <td><a href="{{ path('showInfoFormateur',{'id':personne.id}) }}" >{{ personne.prenom }}</a></td>
                    <td><a href="{{ path('showInfoFormateur',{'id':personne.id}) }}" >{{ personne.nom }}</a></td>
                    <td>{{ personne.sexe }}</td>
                    <td>{{ personne.dateNaissance | date("d/m/Y") }}</td>
                    <td>{{ personne.ville }}</td>
                    <td>{{ personne.email }}</td>
                    <td>{{ personne.telephone }}</td>
                    <td><a href="{{ path('editFormateur',{'id':personne.id}) }}"><i class="fas fa-edit"></i></a></td>
                    <td><a href="{{ path('deleteFormateur',{'id':personne.id}) }}"><i class="fas fa-trash-alt"></i></a></td>

                {% endif %}

            </tr>
            
            {% endfor %}
        </tbody>
    </table>

    {% if stagiaires is defined %}

        <p><a href="../add/stagiaire"  ><button type="button" class="btn btn-warning btn-lg">Ajouter un stagiaire</button></a></p>

    {% else %}

        <p><a href="../add/formateur"  ><button type="button" class="btn btn-warning btn-lg">Ajouter un formateur</button></a></p>

    {% endif %}

{% endblock %}
